# .gitattributes for p2p-path-finder
#
# This file controls which files are included in distribution archives
# and normalizes line endings for cross-platform compatibility.

# Auto-detect text files and normalize line endings to LF
* text=auto eol=lf

# PHP source files
*.php text eol=lf diff=php

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.neon text eol=lf
*.dist text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude files from distribution archives (via `composer install --prefer-dist`)
# This significantly reduces package size for end users

# Development and testing files
/.github/ export-ignore
/.xdebug/ export-ignore
/benchmarks/ export-ignore
/docs/ export-ignore
/examples/ export-ignore
/phpstan/ export-ignore
/tests/ export-ignore
/var/ export-ignore

# Development configuration files
/.editorconfig export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/.php-cs-fixer.dist.php export-ignore
/infection.json.dist export-ignore
/phpbench.json export-ignore
/phpstan.neon.dist export-ignore
/phpstan-baseline.neon export-ignore
/phpunit.xml.dist export-ignore
/psalm.xml.dist export-ignore

# Project-specific development files
/CLAUDE.md export-ignore
/Dockerfile export-ignore
/docker-compose.yml export-ignore
/Makefile export-ignore
/bin/ export-ignore

# Documentation and community files
/CHANGELOG.md export-ignore
/CODE_OF_CONDUCT.md export-ignore
/CONTRIBUTING.md export-ignore
/UPGRADING.md export-ignore
/SECURITY.md export-ignore

# Build and cache files
/.phpunit.cache/ export-ignore
/.phpunit.result.cache export-ignore
/.php-cs-fixer.cache export-ignore

